@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Category
            </h2>
            <hr />
        </div>
        <input asp-for="category.Id" hidden />
        <div class="mb-3 ">
            <label asp-for="category.Name">Category Name</label>
            <input asp-for="category.Name" class="form-control" disabled />
        </div>
        <div class="mb-3 ">
            <label asp-for="category.DisplayOrder">Display Order</label>
            <input asp-for="category.DisplayOrder" class="form-control" disabled />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/List" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>

</form>