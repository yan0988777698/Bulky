@page
@using BulkyWebRazor_Temp.Models
@model BulkyWebRazor_Temp.Pages.Categories.ListModel
@{
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create"  class="btn btn-primary"><i class="bi bi-plus-square"></i>Create New Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Edit and Delete</th>
        </tr>
        @foreach (Category item in Model.CategoryList.OrderBy(x => x.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>