@model List<Category>
@section Styles {
    <style></style>
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">類別清單</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i>新增類別</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>類別名稱</th>
            <th>顯示順序</th>
            <th>操作</th>
        </tr>
        @foreach (Category item in Model.OrderBy(x => x.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>編輯
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>刪除
                        </a>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>