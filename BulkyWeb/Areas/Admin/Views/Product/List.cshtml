@model List<Product>
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i>Create New Product</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>Description</th>
            <th>Edit and Delete</th>
        </tr>
        @foreach (Product item in Model.OrderBy(x => x.ISBN))
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.ISBN</td>
                <td>@item.Author</td>
                <td>@item.Description</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>