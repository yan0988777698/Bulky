@model Product
@{
}
<form method="post" asp-controller="Product" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Product
            </h2>
            <hr />
        </div>
        <input asp-for="Id" hidden />
        <div class="mb-3 ">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" disabled/>
        </div>
        <div class="mb-3 ">
            <label asp-for="ISBN">ISBN</label>
            <input asp-for="ISBN" class="form-control" disabled />
        </div>
        <div class="mb-3 ">
            <label asp-for="Author">Author</label>
            <input asp-for="Author" class="form-control" disabled />
        </div>
        <div class="mb-3 ">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" disabled />
        </div>
        <div class="mb-3 ">
            <label asp-for="ListPrice">ListPrice</label>
            <input asp-for="ListPrice" class="form-control" disabled />
        </div>
        <div class="mb-3 ">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" disabled />
        </div>
        <div class="mb-3 ">
            <label asp-for="Price50">Price50</label>
            <input asp-for="Price50" class="form-control" disabled />
        </div>
        <div class="mb-3 ">
            <label asp-for="Price100">Price100</label>
            <input asp-for="Price100" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="List" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>

</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}